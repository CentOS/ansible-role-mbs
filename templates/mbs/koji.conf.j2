[koji]
server = {{ mbs_kojihub_top_url }}/kojihub
weburl = {{ mbs_kojihub_top_url }}/koji
topurl = {{ mbs_kojihub_top_url }}

authtype = {{ mbs_kojihub_auth_type }}
{% if  mbs_kojihub_auth_type == 'kerberos' %}
krb_rdns = {{ mbs_kojihub_kerberos_rdns | bool }}
;the keytab to auth as for automated clients
keytab = /etc/module-build-service/{{ mbs_config_krb_keytab }}
{% endif %}
{% if  mbs_kojihub_auth_type == 'ssl' %}
cert = {{ mbs_kojihub_ssl_cert }}
serverca = {{ mbs_kojihub_ssl_ca }}
{% endif %}

use_fast_upload = {{ mbs_kojihub_use_fast_upload | bool }}
